<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/pressed"
    android:elevation="3dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imgAvatarDepartmentAdd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/department" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manager_department"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/countEmployeeinDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/nhom_1"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button_editDepartment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="start"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/button_deleteDepartment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:src="@drawable/delete" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>