<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button_closeDialogEmployee"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/close" />

        <ImageView
            android:id="@+id/imgAvatarEmployee"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/uploadavatar" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/imageView_userIcon1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/tvFullnameEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userIcon1"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userIcon1"
                android:background="@color/editTextBG"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Nguyễn Huỳnh Hoa"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/imageView_userIcon12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:src="@drawable/network" />

            <TextView
                android:id="@+id/tvDpEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userIcon12"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userIcon12"
                android:background="@color/editTextBG"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Phòng Nhân Sự"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/imageView_userIcon123"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/tvTotalWorkdays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userIcon123"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userIcon123"
                android:background="@color/editTextBG"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Đã đi làm 29 ngày"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1234"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imageView_userIcon1234"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/tvSalaryEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userIcon1234"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userIcon1234"
                android:background="@color/editTextBG"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="250.000 VND / 1 ngày"
                android:textSize="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_TimeKeeping_StartAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Check In"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_TimeKeeping_EndAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFD17C"
                android:fontFamily="sans-serif-medium"
                android:text="Check Out"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>